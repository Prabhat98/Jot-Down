<div class = "bg-light">
    <div class = "container">
        <div class = "row">
            <div class = "col text-center pt-4 pb-3">
                <h1 class = "display-4">
                    What's on your mind?
                </h1>
                <p class = "lead text-muted">
                    Add notes, Create checklists, Jot down ideas, Formulate plans, Make schedules, 
                    Organize Todos, initiate, form, discover, devise, constitute, design... and more.  
                </p>
            </div>
        </div>
    </div>
</div>
<div class = "container">
    {{#if flag}}
        <div class = "alert alert-danger">
            <strong>Alert!</strong> Please fill out the input fields.
        </div>
    {{/if}}
</div>
<div class = "container">
    <div class = "card border-secondary">
        <div class = "card-header text-center font-weight-bold">
            Make a Note
        </div>
        <div class = "card-body">
            <!-- Form data is sent on the path "/notes" using action attribute -->
            <form action = "/notes" method = "POST">
                <div class = "form-group">
                    <label for = "title">Title</label>
                    <input type = "text" class = "form-control border-primary" name = "title" required>
                </div>
                <div class = "form-group">
                    <label for = "details">Details</label>
                    <textarea class = "form-control border-primary" name = "details" required></textarea>
                </div>
                <button type = "submit" class = "btn btn-primary float-right">Submit</button>
            </form>
        </div>
        <div class = "card-footer text-muted text-center">
            All your notes are instantly and securely saved to the cloud.
        </div>
    </div>
</div>
